<style>
	.page-header {
		text-align: center;
		margin-bottom: 2rem;
	}

	.page-header h1 {
		font-size: 2.2rem;
		color: #333;
		margin-bottom: 0.25rem;
	}

	.subtitle {
		color: #666;
		font-size: 1.1rem;
	}

	h2 {
		font-size: 1.3rem;
		color: #333;
		margin-bottom: 1rem;
	}

	.category-section {
		margin-bottom: 2.5rem;
	}

	.attractions-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 1rem;
	}

	.attraction-card {
		background: #fff;
		border: 1px solid #e0e0e0;
		border-radius: 10px;
		padding: 1.25rem;
		text-align: center;
		transition: transform 0.2s, box-shadow 0.2s;
		position: relative;
	}

	.attraction-card:hover {
		transform: translateY(-3px);
		box-shadow: 0 6px 20px rgba(0,0,0,0.1);
	}

	.attraction-card.featured {
		border-color: #8B2332;
		background: linear-gradient(135deg, #f0fff4 0%, #fff 100%);
	}

	.attraction-icon {
		font-size: 2.5rem;
		display: block;
		margin-bottom: 0.75rem;
	}

	.attraction-card h3 {
		font-size: 1.05rem;
		color: #333;
		margin-bottom: 0.5rem;
	}

	.attraction-card p {
		font-size: 0.85rem;
		color: #555;
		margin: 0;
		line-height: 1.4;
	}

	.badge {
		position: absolute;
		top: 10px;
		right: 10px;
		background: #8B2332;
		color: #fff;
		font-size: 0.65rem;
		font-weight: 600;
		padding: 0.2rem 0.5rem;
		border-radius: 10px;
	}

	.nearby-list {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.nearby-item {
		display: flex;
		gap: 1rem;
		padding: 1rem;
		background: #fff;
		border: 1px solid #e0e0e0;
		border-radius: 8px;
	}

	.nearby-icon {
		font-size: 1.5rem;
		width: 40px;
		text-align: center;
	}

	.nearby-item h4 {
		font-size: 1rem;
		color: #333;
		margin-bottom: 0.2rem;
	}

	.nearby-item p {
		color: #666;
		font-size: 0.85rem;
		margin: 0;
	}

	.restaurants-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 0.75rem;
	}

	.restaurant-item {
		background: #fff;
		border: 1px solid #e0e0e0;
		border-radius: 8px;
		padding: 1rem;
	}

	.restaurant-item.highlight {
		background: #faf5e4;
		border-color: #C9B896;
	}

	.restaurant-item h4 {
		font-size: 0.95rem;
		color: #333;
		margin-bottom: 0.25rem;
	}

	.restaurant-item p {
		font-size: 0.8rem;
		color: #666;
		margin: 0;
	}

	.pools-grid {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.pool-tag {
		background: linear-gradient(135deg, #8B2332 0%, #6B1A26 100%);
		color: #fff;
		padding: 0.5rem 1rem;
		border-radius: 20px;
		font-size: 0.85rem;
	}

	.indoor-info {
		background: #f8f9fa;
		padding: 1.25rem;
		border-radius: 10px;
	}

	.indoor-info p {
		margin-bottom: 0.75rem;
		color: #555;
		font-size: 0.95rem;
	}

	.indoor-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.indoor-tags span {
		background: #e9ecef;
		color: #333;
		padding: 0.4rem 0.8rem;
		border-radius: 15px;
		font-size: 0.85rem;
	}

	.cta-box {
		background: linear-gradient(135deg, #8B2332 0%, #6B1A26 100%);
		color: #fff;
		padding: 2rem;
		border-radius: 12px;
		text-align: center;
	}

	.cta-box p {
		margin-bottom: 1.25rem;
		font-size: 1.1rem;
	}

	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.button {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		border-radius: 6px;
		text-decoration: none;
		font-weight: 500;
		font-size: 0.95rem;
		transition: transform 0.2s;
	}

	.button:hover {
		transform: translateY(-2px);
	}

	.button.primary {
		background: #fff;
		color: #6B1A26;
	}

	.button.secondary {
		background: rgba(255,255,255,0.15);
		color: #fff;
		border: 1px solid rgba(255,255,255,0.3);
	}
</style>
