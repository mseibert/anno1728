---
import Layout from '../../layouts/Layout.astro';
import Lightbox from '../../components/Lightbox.astro';

const gallery = [
	{ src: '/anno-1728-com-wiesbaden-auringen-40.webp', alt: 'Exterior view of the listed half-timbered house Anno 1728' },
	{ src: '/gallery-01.jpg', alt: 'Cozy living room with historic ceiling beams and armchairs' },
	{ src: '/gallery-02.jpg', alt: 'Window with sunflowers in traditional stoneware vase' },
	{ src: '/gallery-03.jpg', alt: 'Spacious bathroom with antique wooden furniture and glass shower' },
	{ src: '/gallery-04.jpg', alt: 'Open window with view of the half-timbered facade' },
	{ src: '/gallery-05.jpg', alt: 'Award-winning half-timbered facade with red beams and white plaster' },
	{ src: '/gallery-06.jpg', alt: 'Cozy seating area with armchairs and round table under ceiling beams' },
	{ src: '/gallery-07.jpg', alt: 'Small bedroom with single bed and historic green door' },
	{ src: '/gallery-08.jpg', alt: 'Entrance of the half-timbered house with white front door and stone steps' },
	{ src: '/gallery-09.jpg', alt: 'Blue vanity table with folding mirror at sunny window' },
	{ src: '/gallery-10.jpg', alt: 'Large bedroom with double bed, wooden floors and vanity table' },
	{ src: '/gallery-11.jpg', alt: 'Living room with white ceiling beams and historic wood stove' },
	{ src: '/gallery-12.jpg', alt: 'Historic steep wooden staircase with worn steps' },
];
const images = gallery.map(g => g.src);
---

<Layout title="Main House - Anno 1728" lang="en">
	<div class="page-header">
		<h1>Main House</h1>
		<p class="subtitle">The historic half-timbered house from 1728</p>
		<span class="award-badge">Hessian Heritage Award 2016</span>
	</div>

	<div class="slideshow">
		<button class="slide-arrow prev" onclick="changeSlide(-1)">&#10094;</button>
		<div class="slides-container">
			{gallery.map((img, index) => (
				<div class={`slide ${index === 0 ? 'active' : ''}`}>
					<img
						src={img.src}
						alt={img.alt}
						onclick={`openGalleryLightbox(${index})`}
						style="cursor: pointer;"
					/>
				</div>
			))}
		</div>
		<button class="slide-arrow next" onclick="changeSlide(1)">&#10095;</button>
		<span class="photo-credit">Photo: Horst Goebel</span>
		<div class="slide-counter"><span id="currentSlide">1</span> / {gallery.length}</div>
		<div class="click-hint">Click for fullscreen</div>
	</div>

	<div class="intro-text">
		<p>
			Step into another era: Our main house is an authentically restored
			half-timbered house that offers you a unique living experience. The original wooden beams,
			lovingly refinished floors, and historic details tell stories
			from nearly 300 years of history.
		</p>
	</div>

	<section class="features-section">
		<h2>Amenities</h2>
		<div class="features-grid">
			<div class="feature-card">
				<span class="feature-icon">üõèÔ∏è</span>
				<h3>Bedrooms</h3>
				<p>Deluxe and small bedroom with comfortable beds</p>
			</div>
			<div class="feature-card">
				<span class="feature-icon">üç≥</span>
				<h3>Kitchen</h3>
				<p>Fully equipped kitchen for self-catering</p>
			</div>
			<div class="feature-card">
				<span class="feature-icon">üöø</span>
				<h3>Bathroom</h3>
				<p>Modern bathroom with historic charm</p>
			</div>
			<div class="feature-card">
				<span class="feature-icon">üåø</span>
				<h3>Garden</h3>
				<p>Idyllic garden for relaxation</p>
			</div>
		</div>
	</section>

	<div class="cta-box">
		<p>Experience history up close ‚Äì book your stay now!</p>
		<div class="cta-buttons">
			<a href="/en/buchungen/" class="button primary">Book now</a>
			<a href="/en/geschichte/" class="button secondary">More about the history</a>
		</div>
	</div>

	<Lightbox />
</Layout>

<style>
	.page-header {
		text-align: center;
		margin-bottom: 2rem;
	}

	.page-header h1 {
		font-size: 2.2rem;
		color: #333;
		margin-bottom: 0.25rem;
	}

	.subtitle {
		color: #666;
		font-size: 1.1rem;
		margin-bottom: 0.75rem;
	}

	.award-badge {
		display: inline-block;
		background: linear-gradient(135deg, #8B2332 0%, #6B1A26 100%);
		color: #fff;
		font-size: 0.8rem;
		font-weight: 600;
		padding: 0.4rem 1rem;
		border-radius: 20px;
	}

	/* Slideshow */
	.slideshow {
		position: relative;
		border-radius: 12px;
		overflow: hidden;
		margin-bottom: 2rem;
		box-shadow: 0 8px 30px rgba(0,0,0,0.12);
		background: #000;
	}

	.slides-container {
		position: relative;
		width: 100%;
		height: 400px;
	}

	.slide {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		opacity: 0;
		transition: opacity 0.5s ease-in-out;
	}

	.slide.active {
		opacity: 1;
	}

	.slide img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
	}

	.slide-arrow {
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		background: rgba(0, 0, 0, 0.5);
		color: #fff;
		border: none;
		padding: 1rem 0.75rem;
		font-size: 1.5rem;
		cursor: pointer;
		z-index: 10;
		transition: background 0.2s;
	}

	.slide-arrow:hover {
		background: rgba(0, 0, 0, 0.8);
	}

	.slide-arrow.prev {
		left: 0;
		border-radius: 0 6px 6px 0;
	}

	.slide-arrow.next {
		right: 0;
		border-radius: 6px 0 0 6px;
	}

	.photo-credit {
		position: absolute;
		bottom: 12px;
		right: 12px;
		background: rgba(0, 0, 0, 0.6);
		color: #fff;
		font-size: 0.75rem;
		padding: 0.25rem 0.6rem;
		border-radius: 4px;
		z-index: 10;
	}

	.slide-counter {
		position: absolute;
		bottom: 12px;
		left: 12px;
		background: rgba(0, 0, 0, 0.6);
		color: #fff;
		font-size: 0.75rem;
		padding: 0.25rem 0.6rem;
		border-radius: 4px;
		z-index: 10;
	}

	.click-hint {
		position: absolute;
		bottom: 12px;
		left: 50%;
		transform: translateX(-50%);
		background: rgba(0, 0, 0, 0.6);
		color: #fff;
		font-size: 0.75rem;
		padding: 0.25rem 0.6rem;
		border-radius: 4px;
		z-index: 10;
	}

	@media (max-width: 600px) {
		.slides-container {
			height: 250px;
		}

		.slide-arrow {
			padding: 0.75rem 0.5rem;
			font-size: 1.2rem;
		}
	}

	.intro-text {
		background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
		padding: 1.5rem;
		border-radius: 10px;
		border-left: 4px solid #8B2332;
		margin-bottom: 2rem;
	}

	.intro-text p {
		margin: 0;
		color: #444;
		font-size: 1.05rem;
		line-height: 1.7;
	}

	h2 {
		font-size: 1.4rem;
		color: #333;
		margin-bottom: 1.25rem;
		text-align: center;
	}

	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 1rem;
		margin-bottom: 2rem;
	}

	.feature-card {
		background: #fff;
		border: 1px solid #e0e0e0;
		border-radius: 10px;
		padding: 1.25rem;
		text-align: center;
		transition: transform 0.2s, box-shadow 0.2s;
	}

	.feature-card:hover {
		transform: translateY(-3px);
		box-shadow: 0 6px 20px rgba(0,0,0,0.1);
	}

	.feature-icon {
		font-size: 2rem;
		display: block;
		margin-bottom: 0.5rem;
	}

	.feature-card h3 {
		font-size: 1rem;
		color: #333;
		margin-bottom: 0.25rem;
	}

	.feature-card p {
		font-size: 0.85rem;
		color: #666;
		margin: 0;
	}

	.cta-box {
		background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
		color: #fff;
		padding: 2rem;
		border-radius: 12px;
		text-align: center;
	}

	.cta-box p {
		margin-bottom: 1.25rem;
		font-size: 1.1rem;
	}

	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.button {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		border-radius: 6px;
		text-decoration: none;
		font-weight: 500;
		font-size: 0.95rem;
		transition: transform 0.2s;
	}

	.button:hover {
		transform: translateY(-2px);
	}

	.button.primary {
		background: #8B2332;
		color: #fff;
	}

	.button.secondary {
		background: rgba(255,255,255,0.15);
		color: #fff;
		border: 1px solid rgba(255,255,255,0.3);
	}

	.button.secondary:hover {
		background: rgba(255,255,255,0.25);
	}
</style>

<script define:vars={{ images }}>
	let currentIndex = 0;
	const slides = document.querySelectorAll('.slide');
	const totalSlides = slides.length;
	const counter = document.getElementById('currentSlide');

	function showSlide(index) {
		if (index >= totalSlides) index = 0;
		if (index < 0) index = totalSlides - 1;

		slides.forEach(slide => slide.classList.remove('active'));
		slides[index].classList.add('active');
		currentIndex = index;
		if (counter) counter.textContent = currentIndex + 1;
	}

	window.changeSlide = function(direction) {
		showSlide(currentIndex + direction);
	}

	window.openGalleryLightbox = function(index) {
		window.openLightbox(images, index);
	}
</script>
