---
interface Props {
	title?: string;
}

const { title = "Anno 1728" } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<div class="header-inner">
				<div class="logo">
					<a href="/">
						<strong>Anno 1728</strong>
					</a>
					<span class="tagline">Denkmalgeschütztes Ferienhaus in Wiesbaden-Auringen</span>
				</div>
				<nav>
					<a href="/">Home</a>
					<a href="/vorderhaus/">Vorderhaus</a>
					<a href="/alter-speicher/">Alter Speicher</a>
					<a href="/geschichte/">Geschichte</a>
					<a href="/buchungen/">Buchungen</a>
				</nav>
			</div>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<p>Anno 1728 · Denkmalgeschütztes Ferienhaus in Wiesbaden-Auringen</p>
			<p>Familie Seibert · Tel: +49 160 6044181 · fewoseibert@seibert-media.net</p>
		</footer>
	</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
		font-size: 16px;
		line-height: 1.6;
		color: #ffffff;
		background: #fff;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	/* Header */
	header {
		border-bottom: 1px solid #e0e0e0;
		padding: 1.5rem 0;
	}

	.header-inner {
		max-width: 900px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	.logo a {
		text-decoration: none;
		color: #333;
		font-size: 1.8rem;
	}

	.tagline {
		display: block;
		font-size: 0.9rem;
		color: #666;
		margin-top: 0.25rem;
	}

	nav {
		margin-top: 1rem;
		display: flex;
		gap: 0.25rem;
		flex-wrap: wrap;
	}

	nav a {
		color: #333;
		text-decoration: none;
		padding: 0.5rem 1rem;
		border-radius: 3px;
		font-size: 0.95rem;
	}

	nav a:hover {
		background: #f5f5f5;
		color: #0066cc;
	}

	/* Main */
	main {
		flex: 1;
		max-width: 900px;
		margin: 0 auto;
		padding: 2rem 1.5rem;
		width: 100%;
	}

	/* Footer */
	footer {
		border-top: 1px solid #e0e0e0;
		padding: 1.5rem;
		text-align: center;
		font-size: 0.85rem;
		color: #666;
		margin-top: auto;
	}

	footer p {
		margin-bottom: 0.25rem;
	}

	/* Responsive */
	@media (max-width: 600px) {
		.logo a {
			font-size: 1.5rem;
		}

		nav a {
			padding: 0.4rem 0.7rem;
			font-size: 0.9rem;
		}
	}
</style>
